# Railway Environment Variables Template
# Copy these to your Railway project's Environment Variables section

# Database Configuration (Railway will provide this)
DATABASE_URL=postgresql://user:pass@host:port/dbname

# Security Configuration (REQUIRED)
SECRET_KEY=your-super-secure-32-character-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Server Configuration
DEBUG=false
HOST=0.0.0.0
PORT=$PORT

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_AUDIO_FILE_SIZE=50

# S3 Configuration (Optional - disable for now)
USE_S3=false
S3_BUCKET_NAME=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION_NAME=us-east-1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/scribsy.log

# Whisper Configuration
WHISPER_MODEL=base